<script> function oblicz(form){ document.getElementById("wynik").innerHTML = ""; let cena_koncowa = 0; let piwo = form.piwo.value; let wino = form.wino.value; let wodka = form.wodka.value; let plec = form.choice.value; let pelny = form.inne.value; let waga = form.waga.value; let czas = form.txt1.value; piwo = piwo * 0.05; wino = wino * 0.1; wodka = wodka * 0.33; if (pelny == 1) pelny = 1.1; else if (pelny == 2) pelny = 1; else pelny = 0.9; if (plec == 1) promile = (wodka + wino + piwo) / (waga * 0.7); else promile = (wodka + wino + piwo) / (waga * 0.6); promile = promile * pelny; promile = promile - (czas * 0.015); if (promile <= 0.06) document.getElementById("wynik").innerHTML = promile.toFixed(2) + " Promila! Mozesz jechac"; else document.getElementById("wynik").innerHTML = promile.toFixed(2) + " Promila! NIE mozesz jechac"; } </script>
