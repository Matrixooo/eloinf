<!DOCTYPE html> <html lang="en"> <head> <meta charset="UTF-8"> <meta name="viewport" content="width=device-width, initial-scale=1.0"> <title>AlkoTEST</title> <script> function oblicz(){ document.getElementById("wynik").innerHTML = ""; let cena_koncowa = 0; let result = document.getElementById("wynik") let piwo = parseInt(document.getElementById("piwo").value); let wino = parseInt(document.getElementById("wino").value); let wodka = parseInt(document.getElementById("wodka").value); let plec = parseInt(document.querySelector('input[name="choice"]:checked').value); let pelny = document.querySelector('input[name="inne"]:checked').value === "pelny" ? 1 : 0.9; let waga = parseInt(document.getElementById("waga").value); let czas = parseInt(document.getElementById("txt1").value); piwo = piwo * 0.05; wino = wino * 0.1; wodka = wodka * 0.33; let promile; if (plec === 1) promile = (wodka + wino + piwo) / (waga * 0.7); else promile = (wodka + wino + piwo) / (waga * 0.6); promile = promile * pelny; promile = promile - (czas * 0.015); if (promile <= 0.06) { result.innerHTML = promile.toFixed(2) + " Promila! Możesz jechać"; result.style.backgroundColor = 'lightgreen'; } else{ result.innerHTML = promile.toFixed(2) + " Promila! NIE możesz jechać"; result.style.backgroundColor = 'red';} } </script> <style> div{ background-color: aquamarine; text-align: justify; color: darkblue; font-size: 20px; font-family: 'Tahoma'; padding: 20px; } h1{ color:darkmagenta; font-family:'Trebuchet MS'; font-size: 40px; text-align: center; } p{ text-align: justify; margin-left: 15px; margin-right: 15px; } input{ color: darkblue; background-color: transparent; border-color: antiquewhite; width: 10%; } button{ color: red; background-color: rgb(156, 156, 230); border-radius: 25px; align-items: center; cursor: pointer; } #wynik{ background-color: aquamarine; border: 1px solid black; width: 5cm; height: 3cm; text-align: center; margin: auto; margin-top: 10px; padding: 10px; } tr{ border:1px; color: black; } <